<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeActivity">

    <EditText
        android:id="@+id/composeText"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_below="@+id/profileName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:text="Write you thoughts here" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/userPic"
        tools:text="Username" />

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:text="Back" />

    <Button
        android:id="@+id/post"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Post" />

    <Spinner
        android:id="@+id/publicOrPrivate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/postPrivacy"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-445dp"
        android:layout_marginEnd="0dp"
        android:spinnerMode="dropdown"
        android:contentDescription="Public or Privat post?"/>

    <TextView
        android:id="@+id/postPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/composeText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="462dp"
        android:text="Public or Private Post?" />

    <TextView
        android:id="@+id/post_category_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publicOrPrivate"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="364dp"
        android:text="Category of Post?" />

    <Spinner
        android:id="@+id/postCategory"
        android:layout_width="match_parent"
        android:contentDescription="What category does this fall under?"
        android:layout_height="50dp"
        android:layout_below="@+id/post_category_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-345dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/urgency_rating_TV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/postCategory"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="263dp"
        android:text="Urgency-Rating" />

    <Spinner
        android:id="@+id/urgencyRate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="Urgency?"
        android:layout_below="@+id/urgency_rating_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-245dp"
        android:layout_marginEnd="0dp" />
</RelativeLayout>